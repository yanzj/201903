<div class="table-responsive">
  <table class="table tablesaw table-hover m-0">
    <thead>
      <tr>
        <th class="text-center">排序</th>
        <th>字段名 </th>
        <th>显示名称 </th>
        <th class="text-center">提交类型</th>
        <th class="text-center">验证规则</th>
        <th class="text-center">操作</th>
      </tr>
    </thead>
    <tbody>

      <tr v-for="item in items">
        <td class="text-center">
          {{ item.taxis }}
        </td>
        <td>
          {{ item.attributeName }}
        </td>
        <td>
          {{ item.displayName }}
        </td>
        <td class="text-center">
          {{ item.inputType }}
        </td>
        <td class="text-center">
          <a href="javascript:;" v-on:click="btnValidateClick(item.attributeName)">{{ item.validate || '无验证' }}</a>
        </td>
        <td class="text-center">
          <a href="javascript:;" v-on:click="btnEditClick(item.attributeName)">编辑</a>
          <a v-if="!item.isSystem" class="text-danger ml-2" href="javascript:;" v-on:click="btnDeleteClick(item.attributeName)">删除</a>
        </td>
      </tr>

    </tbody>
  </table>
</div>

<hr />

<a href="javascript:;" v-on:click="btnAddClick" class="btn btn-sm btn-outline-primary pl-3 pr-3">
  <i class="ion-plus"></i>
  新增字段
</a>
