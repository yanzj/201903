@{ Layout = "../Shared/_LayoutLayer.cshtml"; }

<div class="form-group form-row">
  <label class="col-3 text-right col-form-label col-form-label-sm">
    排序方向
  </label>
  <div class="col-8 radio radio-primary pt-1">
    <input id="isUp" type="radio" v-model="isUp" value="true" />
    <label for="isUp" class="mr-2">上升</label>
    <input id="isDown" type="radio" v-model="isUp" value="false" />
    <label for="isDown" class="mr-2">下降</label>
  </div>
  <div class="col-1 help-block"></div>
</div>

<div class="form-group form-row">
  <label class="col-3 text-right col-form-label col-form-label-sm">
    移动数目
  </label>
  <div class="col-8">
    <input v-model.number="taxis" type="number" class="form-control form-control-sm">
  </div>
  <div class="col-1 help-block"></div>
</div>

<hr />

<div class="text-right mr-1">
  <button v-on:click="btnSubmitClick" type="button" class="btn btn-primary m-l-5">确 定</button>
  <button type="button" class="btn btn-default m-l-5" onclick="window.parent.layer.closeAll()">取 消</button>
</div>

@section Scripts{
<script src="contentsLayerTaxis.js" type="text/javascript"></script> }