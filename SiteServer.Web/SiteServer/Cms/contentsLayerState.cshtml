@{ Layout = "../Shared/_LayoutLayer.cshtml"; }

<div class="form-group form-row">
  <label class="col-2 col-form-label text-right">内容标题</label>
  <div class="col-10 form-control-plaintext" v-html="title"></div>
</div>

<div class="form-group form-row">
  <label class="col-2 col-form-label text-right">审核状态</label>
  <div class="col-4 form-control-plaintext" v-html="checkState"></div>
</div>

<table class="table tablesaw table-bordered table-hover">
  <thead>
    <tr class="thead">
      <th>审核人</th>
      <th>审核时间</th>
      <th>原因</th>
    </tr>
  </thead>
  <tbody>
    <tr v-for="contentCheck in contentChecks">
      <td>
        {{ contentCheck.userName }}
      </td>
      <td>
        {{ contentCheck.checkDate }}
      </td>
      <td>
        {{ contentCheck.reasons }}
      </td>
    </tr>
  </tbody>
</table>

<hr />

<div class="text-right mr-1">
  <button v-on:click="btnSubmitClick" type="button" class="btn btn-primary m-l-5">审 核</button>
  <button type="button" class="btn btn-default m-l-5" onclick="window.parent.layer.closeAll()">取 消</button>
</div>

@section Scripts{
<script src="contentsLayerState.js" type="text/javascript"></script> }