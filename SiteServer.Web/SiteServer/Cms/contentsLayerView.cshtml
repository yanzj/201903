@{ Layout = "../Shared/_LayoutLayer.cshtml"; }

<div class="form-group form-row">
  <label class="col-sm-2 col-form-label">栏目</label>
  <div class="col-sm-9 form-control-plaintext" v-html="channelName"></div>
  <div class="col-sm-1"></div>
</div>

<div v-if="content[_.camelCase(attribute.value)]" class="form-group form-row" v-for="attribute in attributes">
  <label class="col-sm-2 col-form-label">{{ attribute.text }}</label>
  <div class="col-sm-9 form-control-plaintext">
    {{ content.getProp(attribute.value) }}
  </div>
  <div class="col-sm-1"></div>
</div>

<div v-if="content.tags" class="form-group form-row">
  <label class="col-sm-2 col-form-label">内容标签</label>
  <div class="col-sm-9 form-control-plaintext">
    {{ content.getProp('tags') }}
  </div>
  <div class="col-sm-1"></div>
</div>

<div v-if="content.groupNameCollection" class="form-group form-row">
  <label class="col-sm-2 col-form-label">所属内容组</label>
  <div class="col-sm-9 form-control-plaintext">
    {{ content.getProp('groupNameCollection') }}
  </div>
  <div class="col-sm-1"></div>
</div>

<div class="form-group form-row">
  <label class="col-sm-2 col-form-label">最后修改日期</label>
  <div class="col-sm-9 form-control-plaintext">
    {{ content.getProp('lastEditDate') }}
  </div>
  <div class="col-sm-1"></div>
</div>

<div class="form-group form-row">
  <label class="col-sm-2 col-form-label">添加人</label>
  <div class="col-sm-9 form-control-plaintext">
    {{ content.getProp('addUserName') }}
  </div>
  <div class="col-sm-1"></div>
</div>

<div class="form-group form-row">
  <label class="col-sm-2 col-form-label">最后修改人</label>
  <div class="col-sm-9 form-control-plaintext">
    {{ content.getProp('lastEditUserName') }}
  </div>
  <div class="col-sm-1"></div>
</div>

<div class="form-group form-row">
  <label class="col-sm-2 col-form-label">状态</label>
  <div class="col-sm-9 form-control-plaintext" :class="{'text-danger' : content.isChecked !== 'True'}">{{
    content.getProp('checkState') }}</div>
  <div class="col-sm-1"></div>
</div>

<hr />

<div class="text-right mr-1">
  <button type="button" class="btn btn-default m-l-5" onclick="window.parent.layer.closeAll()">关 闭</button>
</div>

@section Scripts{
<script src="contentsLayerView.js" type="text/javascript"></script> }