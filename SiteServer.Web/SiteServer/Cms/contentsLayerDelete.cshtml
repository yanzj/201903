@{ Layout = "../Shared/_LayoutLayer.cshtml"; }

<table class="bg-white table tablesaw table-bordered table-hover">
  <thead>
    <tr>
      <th class="text-center text-nowrap">内容Id </th>
      <th>内容标题 </th>
      <th class="text-center text-nowrap">添加时间</th>
      <th class="text-center text-nowrap">状态</th>
    </tr>
  </thead>
  <tbody>
    <tr v-for="content in contents">
      <td class="text-center">{{ content.id }}</td>
      <td v-html="content.title"></td>
      <td class="text-center text-nowrap">{{ content.addDate }}</td>
      <td class="text-center text-nowrap" v-html="content.checkState"></td>
    </tr>
  </tbody>
</table>

<div class="form-group form-row">
  <label class="col-1 text-right col-form-label col-form-label-sm"></label>
  <div class="col-10 radio radio-primary">
    <input id="isNotRetainFiles" type="radio" v-model="isRetainFiles" value="true" />
    <label for="isNotRetainFiles" class="mr-2">保留生成的内容页面</label>
    <input id="isRetainFiles" type="radio" v-model="isRetainFiles" value="false" />
    <label for="isRetainFiles" class="mr-2">同时删除内容页面</label>
    <small class="text-muted">选择保留页面将仅在数据库中删除内容。</small>
  </div>
  <div class="col-1 help-block"></div>
</div>

<hr />

<div class="text-right mr-1">
  <button v-on:click="btnSubmitClick" type="button" class="btn btn-danger m-l-5">删 除</button>
  <button type="button" class="btn btn-default m-l-5" onclick="window.parent.layer.closeAll()">取 消</button>
</div>

@section Scripts{
<script src="contentsLayerDelete.js" type="text/javascript"></script> }